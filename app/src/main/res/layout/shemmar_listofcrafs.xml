<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="@dimen/_15sdp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_craftsman"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginEnd="25dp"
                android:background="#D6D3D3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_crafsName"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="#D6D3D3"
                app:layout_constraintEnd_toStartOf="@+id/img_craftsman"
                app:layout_constraintTop_toTopOf="@+id/img_craftsman" />

            <TextView
                android:id="@+id/txt_crafs_desc"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="15dp"
                android:background="#D6D3D3"
                app:layout_constraintEnd_toEndOf="@+id/txt_crafsName"
                app:layout_constraintTop_toBottomOf="@+id/txt_crafsName" />

            <TextView
                android:id="@+id/star"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="8dp"
                android:background="#D6D3D3"
                app:layout_constraintEnd_toEndOf="@+id/txt_crafs_desc"
                app:layout_constraintTop_toBottomOf="@+id/txt_crafs_desc" />

            <TextView
                android:id="@+id/txt_ratingQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="#D6D3D3"
                app:layout_constraintEnd_toStartOf="@+id/star"
                app:layout_constraintTop_toTopOf="@+id/star" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>